<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/CameraBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Camera" />

    <Button
        android:id="@+id/WeatherBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_below="@+id/CameraBut"
        android:layout_alignStart="@+id/CameraBut"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/FingerPrintBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FingerPrint"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/WeatherBut"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/SettingsBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FingerPrintBut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Settings" />
</RelativeLayout>