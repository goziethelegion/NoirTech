<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.humber.gbmstats.LoginActivity"
    android:background="#1A2421">

    <TextView
        android:id="@+id/usernametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passtext"
        android:layout_centerVertical="true"
        android:text="@string/usernamesgnup"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usrnametext"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="@string/passwdsgnup"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usrnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/usernametext"
        android:layout_alignBottom="@+id/usernametext"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/usernametext"
        android:ems="10"
        android:hint="@string/usrnamelogin"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/passwdtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passtext"
        android:layout_alignBottom="@+id/passtext"
        android:layout_alignStart="@+id/usrnametext"
        android:ems="10"
        android:hint="@string/pass"
        android:inputType="textPersonName|textPassword"
        android:text=""
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/loginbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwdtext"
        android:layout_below="@+id/passwdtext"
        android:text="@string/login_app" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/loginbutton2"
        android:layout_below="@+id/loginbutton2"
        android:layout_marginTop="13dp"
        android:autoLink="all"
        android:clickable="true"
        android:text="@string/forgot"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:clickable="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_above="@+id/usrnametext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        app:srcCompat="@mipmap/camera" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        app:srcCompat="@mipmap/facial" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginBottom="51dp"
        android:layout_toStartOf="@+id/link"
        app:srcCompat="@mipmap/weather" />

</RelativeLayout>
